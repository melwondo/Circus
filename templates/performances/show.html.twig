{% extends 'base.html.twig' %}

{% block title %}Performances{% endblock %}

{% block content %}
<div class="container pt-5 pb-5">
    <h1>Performances</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ performance.nom }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ performance.contenu }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ performance.logo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('performances_index') }}">back to list</a>

    <a href="{{ path('performances_edit', {'id': performance.id}) }}">edit</a>

    {{ include('performances/_delete_form.html.twig') }}
</div>
