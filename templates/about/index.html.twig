{% extends 'backoffice.html.twig' %}

{% block title %}About index{% endblock %}

{% block content %}
<div class="container pt-5 pb-5">
    <h1>About index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for about in abouts %}
            <tr>
                <td>{{ about.id }}</td>
                <td>{{ about.titre }}</td>
                <td>{{ about.description }}</td>
                <td>
                    <button type="button " class="btn btn-outline-success"><a href="{{ path('about_show', {'id': about.id}) }}">show</a></button>
                    <button type="button" class="btn btn-outline-success"><a href="{{ path('about_edit', {'id': about.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-outline-warning"><a href="{{ path('about_new') }}">Create new</a></button>
    </div>
{% endblock %}
